@model Login
@{
    ViewData["Title"] = "Sesion";
}


    <div id="appLogin">
        <div class="container">
            <div class="row">
                <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                    <div class="card card-signin my-5">
                        <div class="card-body">
                            <h5 class="card-title text-center">Registar Cuenta</h5>
                            <form class="form-signin" method="post" action="/Sesion/Add" id="vehiculoform">
                                <div class="form-label-group">
                                    <input type="text" id="Nombre" class="form-control" name="Nombre"  @@keyup.enter="crearsesion" required autofocus>
                                    <label v-model="sesion.Nombre">Nombre</label>
                                </div>

                                <div class="form-label-group">
                                    <input type="password" id="Contrasenia" class="form-control" name="Contrasenia" @@keyup.enter="crearsesion" required>
                                    <label  v-model="sesion.Contrasenia">Password</label>
                                </div>

                                <div class="custom-control custom-checkbox mb-3">
                                    <input type="checkbox" class="custom-control-input" id="customCheck1">
                                    <label class="custom-control-label" for="customCheck1">Remember password</label>
                                </div>
                                <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Registrate</button>
                                <a href="~/Sesion/Registrar"  class="btn btn-lg btn-success btn-block text-uppercase">Iniciar Sesion</a>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

@section ScriptsSection {
    <script src="~/js/vue.min.js"></script>
    <link href="~/css/Seccion.css" rel="stylesheet" />
    <script src="~/js/Vehiculo-validator.js"></script>
    <script>
        $("#vehiculoform").validate();
    </script>
    <script src="~/js/ListaDeSesion.js"></script>
}
